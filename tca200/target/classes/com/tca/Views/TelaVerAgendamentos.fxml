<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tca.Controllers.VerAgendamentosController">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Lista de Agendamentos" />

    <TableView fx:id="agendamentosTable" prefHeight="411.0" prefWidth="800">
        <columns>
            <TableColumn fx:id="nomeDonoColumn" prefWidth="150" text="Nome do Dono" />

            <TableColumn fx:id="nomePetColumn" prefWidth="120" text="Nome do Pet" />

            <TableColumn fx:id="dataAgendamentoColumn" prefWidth="150" text="Data do Agendamento" />
            <TableColumn fx:id="motivoConsultaColumn" prefWidth="200" text="Motivo" />
            <TableColumn fx:id="acoesColumn" prefWidth="150" text="Ações" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" prefHeight="37.0" prefWidth="800.0" spacing="20" style="-fx-margin-top: 20px;">
        <Button onAction="#handleVoltarTelaInicial" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 50; -fx-pref-width: 150; -fx-pref-height: 40; -fx-font-weight: bold;" text="Voltar à Tela Inicial" />
    </HBox>
</VBox>
