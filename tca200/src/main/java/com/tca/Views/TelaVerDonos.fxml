<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tca.Controllers.VerDonosController">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Lista de Donos" />

    <TableView fx:id="donosTable" prefHeight="400" prefWidth="800">
        <columns>
            <TableColumn fx:id="nomeDonoColumn" prefWidth="250" text="Nome do Dono" />
            <TableColumn fx:id="telefoneDonoColumn" prefWidth="200" text="Telefone" />
            <TableColumn fx:id="emailDonoColumn" prefWidth="200" text="Email" />
            <TableColumn fx:id="acoesColumn" prefWidth="150" text="Ações" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#handleVoltarTelaInicial" text="Voltar à Tela Inicial" />
    </HBox>
</VBox>
